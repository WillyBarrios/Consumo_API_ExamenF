# Variables de entorno para el backend

# Puerto del servidor
PORT=3001

# API SOAP Banguat - Guatemala
SOAP_API_URL=http://www.banguat.gob.gt/variables/ws/tipocambio.asmx
SOAP_API_WSDL=http://www.banguat.gob.gt/variables/ws/tipocambio.asmx?WSDL
SOAP_NAMESPACE=http://www.banguat.gob.gt/variables/ws/
SOAP_METHOD=TipoCambioDia

# Base de datos MySQL
DB_HOST=localhost
DB_PORT=3306
DB_NAME=api_banguat_tipocambio
DB_USER=api_user
DB_PASSWORD=Aa12345678
DB_CHARSET=utf8mb4

# Configuración de conexión
DB_CONNECTION_LIMIT=10
DB_TIMEOUT=60000
DB_ACQUIRE_TIMEOUT=60000

# Timeout para peticiones HTTP (en milisegundos)
HTTP_TIMEOUT=10000

# Nivel de logging (development, production)
NODE_ENV=development

# Configuración de cache (en minutos)
CACHE_DURATION=30